@model List<CategoryListModel>

@{

    if (Model?.Count > 0)
    {
        <div class="text-end">
        <a asp-controller="Category" asp-action="Create">Create new category</a>
        </div>
        <table class="table">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Definition</th>
                    <th>#</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var category in Model)
                {
                    <tr>
                        <td>@category.Id</td>
                        <td>@category.Definition</td>
                        <td><a class="btn btn-danger btn-sm" asp-controller="Category" asp-action="Remove" asp-route-id="@category.Id">Remove</a></td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <div class="text-center">
            Herhangi bir kayıt bulunamadı.
        </div>
    }
}


