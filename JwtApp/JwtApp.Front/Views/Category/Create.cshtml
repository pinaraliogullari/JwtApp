@model CategoryCreateModel

<form asp-controller="Category" asp-action="Create" method="post" class="m-5 p-3  mx-auto w-75">
    <div class="mb-3">
        <label asp-for="@Model.Definition" class="form-label">Definition</label>
        <span class="text-danger" asp-validation-for="@Model.Definition"></span>
        <input type="text" asp-for="@Model.Definition" class="form-control" />
    </div>
   
    <div class="mb-3">
        <button type="submit" class="btn btn-primary w-100">Create</button>
    </div>
    <div asp-validation-summary="ModelOnly" class="text-danger">
    </div>
</form>